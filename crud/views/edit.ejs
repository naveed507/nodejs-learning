
<%- include('./partials/header.ejs') %>
   <div class="container">
    <div class="row">
        <div class="col-md-6 mt-5">
            <h2 class="alert alert-success text-center">Update Student </h2>
            <form method="post" action="/student/update/<%= data._id %>">
                <div class="form-group">
                  <label for="name">Name:</label>
                  <input type="text" value="<%= data.name %>" class="form-control" placeholder="Enter Name" name="name">
                </div>
                <div class="form-group">
                    <label for="age">Age:</label>
                    <input type="number" value="<%= data.age %>" class="form-control" placeholder="Enter Age" name="age">
                  </div>
                  <div class="form-group">
                    <label for="fees">Fees:</label>
                    <input type="text" value="<%= data.fees %>" class="form-control" placeholder="Enter Fees" name="fees">
                  </div>
                
                
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
        </div>
        
    </div>
   </div>
<%- include('./partials/footer.ejs') %>
    

